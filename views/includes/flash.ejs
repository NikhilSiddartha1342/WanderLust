<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissibble fade show col-6 offset-3" role="alert">
        <!-- dissmissible creates cross button whihc when clicked will remove alert -->
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissibble fade show col-6 offset-3" role="alert">
        <!-- dissmissible creates cross button whihc when clicked will remove alert -->
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>